input
  width 100%
  height 100%
  padding-left .625rem
  box-sizing border-box
  border 1px solid #ddd
  border-radius 4px
  outline 0
  font 400 .875rem Arial
  &:focus
    border 1px solid #02a774
.login_message
  position relative
  margin-top 1rem
  height 3rem
  font-size .875rem
  background #fff
  .get_verification
    position absolute
    top 50%
    right .625rem
    transform translateY(-50%)
    border 0
    color #ccc
    font-size .875rem
    background transparent
    &.rightphone
      color black
.login_verification
  position relative
  margin-top 1rem
  height 3rem
  font-size .875rem
  background #fff
.login_hint
  margin-top .75rem
  color #999
  font-size .875rem
  line-height 1.25rem
  >a
    color #02a774